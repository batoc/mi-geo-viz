{
  "name": "Mapa Polígonos Cali",
  "version": "1.0.0",
  "author": "Cristian Andres Toledo",
  "supportUrl": "https://github.com/batoc/mi-geo-viz/issues",
  "resources": [
    { "type": "css",    "url": "https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" },
    { "type": "script", "url": "https://unpkg.com/leaflet@1.7.1/dist/leaflet.js" },
    { "type": "script", "url": "index.js" }
  ],
  "config": [
    {
      "type": "TEXTINPUT",
      "name": "comunasUrl",
      "displayName": "URL GeoJSON Comunas",
      "helpText": "Pega aquí la URL pública de comunas.geojson (raw.githubusercontent.com o Cloud Storage)"
    },
    {
      "type": "BOOLEAN",
      "name": "showComunas",
      "displayName": "Mostrar Comunas",
      "default": true
    },
    {
      "type": "TEXTINPUT",
      "name": "corregimientosUrl",
      "displayName": "URL GeoJSON Corregimientos"
    },
    {
      "type": "BOOLEAN",
      "name": "showCorregimientos",
      "displayName": "Mostrar Corregimientos",
      "default": false
    }
  ]
}

